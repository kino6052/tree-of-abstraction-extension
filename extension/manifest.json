{
  "manifest_version": 2,
  "name": "Tree of Abstraction",
  "short_name": "tree-of-abstraction",
  "version": "1.0.0",
  "description": "...",
  "background": {
    "scripts": ["./background.js"]
  },
  "browser_action": {},
