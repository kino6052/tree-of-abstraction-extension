{
    "compilerOptions": {
        "jsx": "react",
        "lib": ["es6", "dom"],
        "outDir": "./dist",
        "rootDir": "src",
        "module": "commonjs",
        "target": "es5",
        "sourceMap": true,
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true
    },
    "include": [
      "./src"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
}
